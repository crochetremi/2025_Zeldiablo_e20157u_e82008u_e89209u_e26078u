@startuml
'https://plantuml.com/class-diagram

class Monstre{

    - x: int;
    - y: int;

    + Monstre(): void
    + positionAleatoire(Labyrinthe): void
    + peutSeDeplacer(): void

}

class Labyrinthe{

    + X : char
    + P : char
    + . : char
    + Haut : String
    + Bas : String
    + Gauche : String
    + Droite : String
    + pj : Perso
    + murs : boolean[][]

    + getSuivant(int, int, String): int[]
    + Labyrinthe(String): void
    + deplacerPerso(String)
    + etreFini(): boolean
    + getLengthY(): int
    + getLengthX(): int
    + getMur(int,int): boolean
    + genererMonstre(): void
    + ajouterMonstre(Monstre): void

}

class LabyDessin implements DessinJeu{

    + dessinerJeu(Jeu, Canvas): void

}

class LabyJeu implements Jeu{
    + Labyrinthe : Labyrinthe

    + update(double, Clavier): void
    + init(): void
    + etreFini(): boolean
    + getLabyrinthe(): Labyrinthe

}

class Main{
    + main(String[] args): void
}

class MainLaby{
    + main(String[] args): void
}

class Perso{

    + x : int
    + y : int

    + Perso(int, int): void
    + etrePresent(int, int): boolean
    + getX(): int
    + getY(): int
}

